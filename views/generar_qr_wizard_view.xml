<odoo>
  <record id="view_generar_qr_wizard_form" model="ir.ui.view">
    <field name="name">generar.qr.wizard.form</field>
    <field name="model">generar.qr.wizard</field>
    <field name="arch" type="xml">
      <form string="Generar QR para Checkpoint">
        <group>
          <field name="checkpoint_id"/>
          <field name="qr_image" widget="image" readonly="1" style="width:200px; height:200px;"/>
        </group>
        <footer>
          <button name="generar_qr" type="object" string="Generar QR" class="btn-primary"/>
          <button string="Cerrar" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>